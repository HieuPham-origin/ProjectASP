@model ShoppingCartViewModel

<h2>Shopping Cart</h2>

@if (Model.OrderDetails.Count == 0)
{
    <p>Your shopping cart is empty.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Product</th>
                <th>Size</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orderDetail in Model.OrderDetails)
            {
                <tr>
                    <td>@orderDetail.Product.ProductName</td>
                    <td>@orderDetail.Size.Name</td>
                    <td>@orderDetail.Quantity</td>
                    <td>@orderDetail.Price</td>
                </tr>
            }
        </tbody>
    </table>
}

@if (Model.ProductSizes.Count > 0)
{
    <h3>Available Sizes:</h3>
    <ul>
        @foreach (var productSize in Model.ProductSizes)
        {
            <li>@productSize.Size.Name - @productSize.Product.ProductName</li>
        }
    </ul>
}

<form method="post" action="/ShoppingCart/Checkout">
    <button type="submit">Checkout</button>
</form>